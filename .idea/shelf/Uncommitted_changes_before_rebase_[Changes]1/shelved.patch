+        if (stroke) {
+            val states = textColors
+            paint.style = Paint.Style.STROKE
+            paint.strokeWidth = strokeWidth
+            setTextColor(strokeColor)
+            super.onDraw(canvas)
+            paint.style = Paint.Style.FILL
+            setTextColor(states)
+        }
+        super.onDraw(canvas)
+    }
+
+    fun setStroke(judge: Boolean) {
+        stroke = judge
+    }
